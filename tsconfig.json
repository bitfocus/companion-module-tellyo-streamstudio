{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "strict": true,
        "alwaysStrict": false,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*", "types/*"]
        },
        "declaration": false,
        "importHelpers": false,
        "listFiles": false,
        "traceResolution": false,
        "pretty": true,
        "lib": ["es6", "es2019"],
        "types": ["node", "jest"],
        "typeRoots": ["./node_modules/@types"],
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/*.ts"],
    "compileOnSave": false,
    "exclude": ["node_modules/**"]
}

